<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.foodcourt.controllers.DailySalesController">
    <VBox spacing="10" alignment="CENTER" AnchorPane.topAnchor="10" AnchorPane.bottomAnchor="10" AnchorPane.leftAnchor="10" AnchorPane.rightAnchor="10">
        <Label text="Daily Sales Verification" style="-fx-font-size: 20; -fx-font-weight: bold;"/>

        <HBox spacing="10" alignment="CENTER">
            <Label text="Select Date:"/>
            <DatePicker fx:id="datePicker"/>
            <Button text="Load Data" onAction="#handleLoadData"/>
        </HBox>

        <TableView fx:id="salesTable" prefWidth="600" prefHeight="300">
            <columns>
                <TableColumn text="Transaction ID" prefWidth="100" fx:id="transIdCol"/>
                <TableColumn text="Payment Type" prefWidth="100" fx:id="paymentTypeCol"/>
                <TableColumn text="Amount" prefWidth="100" fx:id="amountCol"/>
                <TableColumn text="Time" prefWidth="150" fx:id="timeCol"/>
                <TableColumn text="Status" prefWidth="150" fx:id="statusCol"/>
            </columns>
        </TableView>

        <HBox spacing="10" alignment="CENTER">
            <Label text="Total Sales:" style="-fx-font-weight: bold;"/>
            <Label fx:id="totalSalesLabel" text="$0.00" style="-fx-font-weight: bold;"/>
        </HBox>

        <HBox spacing="10" alignment="CENTER">
            <Button text="Verify All" onAction="#handleVerifyAll"/>
            <Button text="Flag Discrepancy" onAction="#handleFlagDiscrepancy"/>
            <Button text="Generate Report" onAction="#handleGenerateReport"/>
        </HBox>

        <TextArea fx:id="discrepancyNotes" prefWidth="600" prefHeight="100" promptText="Enter discrepancy notes here..."/>
    </VBox>
</AnchorPane>