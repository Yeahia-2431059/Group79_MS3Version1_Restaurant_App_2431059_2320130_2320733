<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.app.restaurant_app.Ashik.CostAnalysis"
            prefHeight="400.0" prefWidth="600.0">
    <VBox>

        <Label text="Inventory Cost Analysis"/>
        <Button text="Load Inventory Data" onAction="#loadData"/>
        <TextArea fx:id="analysisArea" prefRowCount="12" editable="false"/>
        <Button text="Generate Food Cost Ratio" onAction="#generateRatio"/>
        <Label fx:id="ratioLabel"/>
    </VBox>

</AnchorPane>
