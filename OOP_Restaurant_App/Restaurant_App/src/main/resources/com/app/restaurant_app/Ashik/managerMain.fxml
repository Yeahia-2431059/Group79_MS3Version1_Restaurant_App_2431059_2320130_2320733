<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.app.restaurant_app.Ashik.ManagerMain"
            prefHeight="400.0" prefWidth="600.0">

</AnchorPane>
        <?xml version="1.0" encoding="UTF-8"?>

        <?import javafx.geometry.Insets?>
        <?import javafx.scene.control.*?>
        <?import javafx.scene.layout.*?>

<BorderPane xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.group79.controllers.ManagerController">
<top>
    <HBox spacing="10" padding="10">
        <Label text="Restaurant Manager Dashboard" style="-fx-font-size:18px; -fx-font-weight:bold;"/>
        <Pane HBox.hgrow="ALWAYS"/>
        <Button text="Export Report"/>
    </HBox>
</top>
<center>
    <VBox spacing="10" padding="10">
        <HBox spacing="20">
            <VBox spacing="6">
                <Label text="Overview" style="-fx-font-size:16px; -fx-font-weight:bold;"/>
                <Label fx:id="dailySalesLabel" text="Daily Sales: $0.00"/>
            </VBox>
            <VBox spacing="6">
                <Label text="Actions" style="-fx-font-size:16px; -fx-font-weight:bold;"/>
                <Button fx:id="refreshBtn" text="Refresh Data" onAction="#onRefresh"/>
            </VBox>
        </HBox>
        <TableView fx:id="transactionsTable" prefHeight="320">
            <!-- Columns can be defined in controller or here -->
        </TableView>
    </VBox>
</center>
<bottom>
    <HBox padding="10">
        <Label text="Status: All systems nominal."/>
    </HBox>
</bottom>
</BorderPane>
