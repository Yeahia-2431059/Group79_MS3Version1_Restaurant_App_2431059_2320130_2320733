<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.app.restaurant_app.Ashik.Discounts"
            prefHeight="400.0" prefWidth="600.0">
    <VBox>
        <Label text="Discounts & Refunds"/>
        <Button text="Load Transactions" onAction="#loadTransactions"/>

        <TableView fx:id="discountTable">
            <columns>
                <TableColumn text="Transaction ID"/>
                <TableColumn text="Promo Code"/>
                <TableColumn text="Discount"/>
                <TableColumn text="Refund"/>
            </columns>
        </TableView>

        <Button text="Generate Report" onAction="#generateReport"/>
        <Label fx:id="impactLabel"/>
    </VBox>

</AnchorPane>
