<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.app.restaurant_app.Ashik.FinancialReport"
            prefHeight="400.0" prefWidth="600.0">
    <VBox>

        <Label text="Financial Report Generator"/>
        <ChoiceBox fx:id="reportType" promptText="Select Report Type"/>
        <DatePicker fx:id="monthPicker"/>
        <Button text="Generate Report" onAction="#generateReport"/>

        <TextArea fx:id="reportArea" prefRowCount="15" editable="false"/>
        <HBox spacing="10">
            <Button text="Export PDF" onAction="#exportPDF"/>
            <Button text="Export Excel" onAction="#exportExcel"/>
        </HBox>
    </VBox>

</AnchorPane>

