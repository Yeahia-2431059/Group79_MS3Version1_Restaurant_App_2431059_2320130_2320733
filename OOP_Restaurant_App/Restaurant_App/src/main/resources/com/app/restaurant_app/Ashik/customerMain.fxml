<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.app.restaurant_app.Ashik.CustomerMain"
            prefHeight="400.0" prefWidth="600.0">

</AnchorPane>
        <?xml version="1.0" encoding="UTF-8"?>

        <?import javafx.geometry.Insets?>
        <?import javafx.scene.control.*?>
        <?import javafx.scene.layout.*?>

<BorderPane xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.group79.controllers.CustomerController">
<top>
    <HBox spacing="10" padding="10">
        <Label text="Customer View - Browse Menu" style="-fx-font-size:18px; -fx-font-weight:bold;"/>
        <Pane HBox.hgrow="ALWAYS"/>
        <TextField fx:id="searchField" promptText="Search items..." onAction="#onSearch"/>
        <Button text="Search" onAction="#onSearch"/>
    </HBox>
</top>
<center>
    <SplitPane dividerPositions="0.4">
        <ListView fx:id="menuList" prefWidth="280"/>
        <VBox spacing="8" padding="10">
            <Label text="Item Details" style="-fx-font-size:14px; -fx-font-weight:bold;"/>
            <TextArea fx:id="itemDetails" wrapText="true"/>
            <HBox spacing="10">
                <Button fx:id="addToCartBtn" text="Add to Cart" onAction="#onAddToCart"/>
                <Button text="Customize" />
                <Button text="Proceed to Checkout" />
            </HBox>
        </VBox>
    </SplitPane>
</center>
<bottom>
    <HBox padding="10" spacing="12">
        <Label text="Cart: "/>
        <Label text="(Cart preview placeholder)"/>
    </HBox>
</bottom>
</BorderPane>
