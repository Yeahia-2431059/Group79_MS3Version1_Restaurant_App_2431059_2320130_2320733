<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.app.restaurant_app.Ashik.DailySales"
            prefHeight="400.0" prefWidth="600.0">
    <Label text="Daily Sales Verification"/>
    <DatePicker fx:id="datePicker"/>

    <Button text="Load Transactions" onAction="#loadTransactions"/>

    <TableView fx:id="salesTable">
        <columns>
            <TableColumn text="Transaction ID"/>
            <TableColumn text="Payment Type"/>
            <TableColumn text="Amount"/>
        </columns>
    </TableView>

    <Button text="Generate Summary" onAction="#generateSummary"/>
    <Label fx:id="summaryLabel"/>

</AnchorPane>